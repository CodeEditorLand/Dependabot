{
	"name": "js-devbox",
	"version": "5.1.0",
	"description": "Some standard devDependencies we use",
	"keywords": [
		"KEYWORDS"
	],
	"homepage": "https://github.com/holvonix-open/js-devbox#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/holvonix-open/js-devbox.git"
	},
	"license": "Apache-2.0",
	"author": "Holvonix LLC and the js-devbox AUTHORS <sourcecode@holvonix.com> (https://github.com/holvonix-open/js-devbox)",
	"contributors": [
		"See AUTHORS file",
		"See CONTRIBUTORS file"
	],
	"main": "lib/index.js",
	"bin": {
		"github-changes": "./scripts/null-github-changes.sh",
		"pushver": "./scripts/pushver.sh"
	},
	"files": [
		"lib/",
		"scripts/null-github-changes.sh",
		"CHANGELOG.md",
		"package.json",
		"LICENSE",
		"AUTHORS",
		"NOTICE",
		"README.md",
		"CONTRIBUTORS",
		".flowconfig",
		".babelrc",
		".eslintrc.json",
		".npmignore",
		".gitignore",
		".travis.yml",
		"yarn.lock"
	],
	"scripts": {
		"build": "yarn run clean && yarn babel src/ -d lib/",
		"clean": "rm -rf lib",
		"contrib": "./scripts/contrib.sh",
		"flow": "flow",
		"lint": "eslint src",
		"prepack": "yarn build",
		"prepare": "yarn build",
		"prepublishOnly": "yarn test",
		"test": "yarn lint && yarn run flow && yarn build && yarn test-only",
		"test-only": "jest",
		"tidy-ci": "yarn contrib",
		"preversion": "yarn test"
	},
	"lint-staged": {
		"src/**/*.{js,jsx}": [
			"prettier --parser flow --write",
			"git add"
		],
		"**/*.{json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"jest": {
		"collectCoverage": true,
		"coverageDirectory": "./coverage/",
		"testEnvironment": "node"
	},
	"dependencies": {
		"babel-cli": "6.26.0",
		"babel-core": "6.26.3",
		"babel-eslint": "10.1.0",
		"babel-jest": "29.7.0",
		"babel-preset-flow": "6.23.0",
		"eslint": "9.20.1",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "10.0.1",
		"eslint-plugin-flowtype": "8.0.3",
		"eslint-plugin-import": "2.31.0",
		"eslint-plugin-jest": "28.11.0",
		"eslint-plugin-prettier": "5.2.3",
		"flow-bin": "0.261.0",
		"git-contributors": "0.2.5",
		"husky": "9.1.7",
		"jest-cli": "29.7.0",
		"lint-staged": "15.4.3",
		"prettier": "3.5.0",
		"semver": "7.7.1"
	},
	"engines": {
		"node": ">=6.0.0",
		"yarn": "1.3.2"
	}
}
